{
    "extends": [
        ":timezone(Asia/Tokyo)",
        "group:monorepos",
        "packages:stylelint",
        ":prConcurrentLimit10",
        ":ignoreModulesAndTests",
        ":widenPeerDependencies"
    ],
    "npm": {
        "extends": [
            ":noUnscheduledUpdates",
            ":separatePatchReleases",
            ":unpublishSafe",
            "helpers:disableTypesNodeMajor"
        ],
        "schedule": [
            "before 11am on Monday"
        ],
        "rangeStrategy": "bump",
        "lockFileMaintenance": {
            "enabled": true,
            "schedule": [
                "before 3am on the first day of the month"
            ]
        },
        "semanticCommits": true,
        "semanticCommitType": "chore",
        "packageRules": [
            {
                "separateMinorPatch": true,
                "depTypeList": [
                    "devDependencies"
                ],
                "updateTypes": [
                    "patch"
                ],
                "automerge": true
            },
            {
                "groupName": "Lint libraries",
                "packageNames": [
                    "eslint",
                    "tslint"
                ],
                "packagePatterns": [
                    "^eslint-config-",
                    "^eslint-plugin-"
                ]
            }
        ]
    }
}
